		static public const UP:uint = 0x00000010;
		static public const DOWN:uint = 0x00000100;
		static public const MOVE:uint = 0x00001000;
		static public const OVER:uint = 0x00010000;
		static public const OUT:uint = 0x00100000;
	}
}
